{% extends 'AddUserDinoBundle:Blog/Post:base.html.twig' %}

{% block blog_content %}
            <div class="col-sm-9">
                {#jak umieścić text na dnie div'a: http://jsfiddle.net/silb3r/0srp42pb/11/#}
                <h4><small>OSTATNIE POSTY</small></h4>
                {% for post in paginatedCollection %}
                <hr>
                <h2><a href="{{ path('blog_post_show', { 'slug': post.slug }) }}">{{ post.title }}</a></h2>
                <h5><span class="glyphicon glyphicon-time"></span> Dodano przez <przez></przez> {{ post.user.name }}, {{ post.createdAt | date("m/d/Y")}}.</h5>
                <h5><span class="label label-danger">Food</span> <span class="label label-primary">Ipsum</span></h5><br>
                <p>{{ post.body | truncate(350, true) }} &#8212; <a href="{{ path('blog_post_show', {'slug': post.slug}) }}"> Czytaj więcej &raquo;</a> </p>
                <br><br>


                <p>Ostatni komentarz:</p><br>

                <div class="row">
                    <div class="col-sm-2 text-center">
                        <img src="bandmember.jpg" class="img-circle" height="65" width="65" alt="Avatar">
                    </div>
                    <div class="col-sm-10">
                        <h4>Anja <small>Sep 29, 2015, 9:12 PM</small></h4>
                        <p>Keep up the GREAT work! I am cheering for you!! Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                        <br>
                    </div>

                </div>

                {% endfor %}
                <div style="text-align: center;">
                    <span>{{ pagerfanta(paginatedCollection, 'twitter_bootstrap3') }}</span>
                </div>
            </div>

{% endblock %}

